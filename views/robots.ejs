<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-robot me-2"></i>
                <strong>Globomantics</strong> Robotics
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/robots"><i class="fas fa-robot me-1"></i>Fleet Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/maintenance"><i class="fas fa-tools me-1"></i>Maintenance</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-robot me-2"></i>Robot Fleet Management</h2>
            <button class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Add New Robot
            </button>
        </div>

        <div class="row">
            <% robots.forEach(robot => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><%= robot.name %></h5>
                        <small>Model: <%= robot.model %></small>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Status:</strong><br>
                                <% if (robot.status === 'Active') { %>
                                    <span class="badge bg-success"><%= robot.status %></span>
                                <% } else { %>
                                    <span class="badge bg-warning"><%= robot.status %></span>
                                <% } %>
                            </div>
                            <div class="col-6">
                                <strong>Battery:</strong><br>
                                <span class="badge bg-success"><%= robot.batteryLevel %>%</span>
                            </div>
                        </div>

                        <p><strong>Location:</strong> <%= robot.location %></p>
                        <p><strong>Current Task:</strong> <%= robot.assignedTask %></p>
                        <p><strong>Last Maintenance:</strong> <%= moment(robot.lastMaintenance).format('MMM DD, YYYY') %></p>
                    </div>
                    <div class="card-footer">
                        <a href="/robot/<%= robot.id %>" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
